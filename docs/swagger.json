    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "type": "object",
                        "properties": {
                            "status": {
                                "type": "boolean",
                                "example": false
                            },
                            "message": {
                                "type": "string",
                                "example": "Invalid email or password"
                            }
                        }
                    }
                }
            },
            "DefaultSuccessResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "type": "object",
                        "properties": {
                            "status": {
                                "type": "boolean",
                                "example": true
                            },
                            "message": {
                                "type": "string",
                                "example": "User fetched successfully"
                            }
                        }
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "user@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password123"
                    }
                }
            },
            "CategoryRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Category Name"
                    }
                }
            },
            "ContentRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Content Title"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "Content Excerpt"
                    },
                    "description": {
                        "type": "string",
                        "example": "Content Description"
                    },
                    "tags": {
                        "type": "string",
                        "example": "tag1, tag2"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "status": {
                        "type": "string",
                        "example": "PUBLISHED"
                    },
                    "image": {
                        "type": "string",
                        "example": "https://example.com/image.jpg"
                    }
                }
            },
            "UpdatePasswordRequest": {
                "type": "object",
                "properties": {
                    "current_password": {
                        "type": "string",
                        "example": "current_password"
                    },
                    "new_password": {
                        "type": "string",
                        "example": "new_password"
                    },
                    "confirm_password": {
                        "type": "string",
                        "example": "confirm_password"
                    }
                }
            },
            "AuthResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "type": "object",
                        "properties": {
                            "status": {
                                "type": "boolean",
                                "example": true
                            },
                            "message": {
                                "type": "string",
                                "example": "User fetched successfully"
                            }
                        }
                    },
                    "access_token": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                    },
                    "expired_at": {
                        "type": "string",
                        "example": "2025-05-17T08:16:57.123456Z"
                    }
                }
            },
            "CategoryResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Category Name"
                    },
                    "slug": {
                        "type": "string",
                        "example": "category-slug"
                    },
                    "created_by_name": {
                        "type": "string",
                        "example": "user@example.com"
                    }
                }
            },
            "ContentResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Category Name"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "Category Excerpt"
                    },
                    "description": {
                        "type": "string",
                        "example": "Category Description"
                    },
                    "status": {
                        "type": "string",
                        "example": "PUBLISHED"
                    },
                    "image": {
                        "type": "string",
                        "example": "https://example.com/image.jpg"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": ["tag1", "tag2"]
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-05-17T08:16:57.123456Z"
                    },
                    "category_name": {
                        "type": "string",
                        "example": "Category Name"
                    },
                    "author": {
                        "type": "string",
                        "example": "user@example.com"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_by_id": {
                        "type": "integer",
                        "example": 1
                    }
                }
            },
            "ProfileResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "user"
                    },
                    "email": {
                        "type": "string",
                        "example": "user@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                }
            }
        }
    }
